// Sidebar
// -------
sidebar-width = 250px

.sidebar {
  overflow: hidden
  position: fixed
  width: sidebar-width
  top: 0px
  bottom: 0px
  background: config.colors.primary
  color: #ffffff
  z-index: 3
  padding: 20px

  .sidebar-branding {
    float: left
    width: 100%
    margin: 0 0 20px 0
  
    .sidebar-branding-logo {
      -standalone()
      background: transparent url('images/logo.svg') 0 0
      height: 60px
      width: 60px
      float: left
    }
      
    .sidebar-branding-title {
      float: left
      margin: 15px 0 15px 20px
      
      h1, h2 {
        margin: 0
      }
    }

  }
  
  .sidebar-menu {
    // padding: 15px 10px 15px 0
    height: 30px
    margin-bottom: 20px
    
    // TODO: Clean up button API
    -button-group(buttonName: '.option a', primary: #ffffff, offset: config.colors.primary)
    .option:last-child a {
      border-width: 0
    }
    .option {
      width: ((1/3) * 100)%
      a {
        width: 100%
        text-align: center
      }
    }

    // .option {
    //   height: 30px
     
    //   a {
    //     -button(primary: #ffffff, offset: config.colors.primary)
    //   }
    // }
    
  }
  
  .sidebar-section {

    .grid {

      item-size = 85px
      
      overflow: hidden

      .grid-item {
        height: item-size
        width: item-size
        margin: 0px 10px 20px
        border-radius: 50%
        display: block
        float: left
        overflow: hidden
      }

    }

  }

}

// Content
// -------
.content {
  margin: 0 0 0 sidebar-width
  padding: 20px
}

// Page
// ----
.page-header {
  border-bottom: 2px solid config.colors.primary
  line-height: 20px
  margin-bottom: 20px
}