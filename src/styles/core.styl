@require './config'

// Core
// ====
// Contains base styles.

// Reset
// -----
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td {
  margin:0
  padding:0
}
table {
  border-collapse:collapse
  border-spacing:0
}
fieldset,img {
  border:0
}
address,caption,cite,code,dfn,em,strong,th,var {
  font-style:normal
  font-weight:normal
}
ol,ul {
  list-style:none
}
caption,th {
  text-align:left
}
h1,h2,h3,h4,h5,h6 {
  font-size:100%
  font-weight:normal
}
q:before,q:after {
  content:''
}
abbr,acronym {
  border:0
}

// Border-sizing
html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}


// Basics
// ------

body {
  width: 100%
  position: relative
  color: config.colors.primary
  background: config.colors.offset
  font-family: config.fonts.normal.family
  font-size: config.fonts.normal.size
  font-height: config.fonts.normal.height
  font-weight: config.fonts.normal.weight
  line-height: config.fonts.normal.line-height
}

h1, h2, h3 {
  font-family: config.fonts.title.family
  font-size: config.fonts.title.size
  font-height: config.fonts.title.height
  font-weight: config.fonts.title.weight
  line-height: config.fonts.title.line-height
  margin: 0 0 10px
  padding: 0
}


// Menus
// -----

.menu {
  overflow: hidden
}

.option-inline {
  float: left
}

